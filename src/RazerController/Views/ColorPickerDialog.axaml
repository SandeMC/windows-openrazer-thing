<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="RazerController.Views.ColorPickerDialog"
        Title="Select Color"
        Width="450" Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    
    <Grid RowDefinitions="Auto,*,Auto" Margin="20">
        <!-- RGB Sliders -->
        <StackPanel Grid.Row="0" Spacing="15">
            <TextBlock Text="Select a Color" FontSize="16" FontWeight="Bold"/>
            
            <!-- Red -->
            <StackPanel Spacing="5">
                <TextBlock Text="Red:" FontWeight="Bold"/>
                <Grid ColumnDefinitions="*,60">
                    <Slider Grid.Column="0" 
                            Name="RedSlider"
                            Minimum="0" Maximum="255" 
                            TickFrequency="1" 
                            IsSnapToTickEnabled="True"
                            Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1" 
                             Text="{Binding #RedSlider.Value}" 
                             Width="50"/>
                </Grid>
            </StackPanel>
            
            <!-- Green -->
            <StackPanel Spacing="5">
                <TextBlock Text="Green:" FontWeight="Bold"/>
                <Grid ColumnDefinitions="*,60">
                    <Slider Grid.Column="0" 
                            Name="GreenSlider"
                            Minimum="0" Maximum="255" 
                            TickFrequency="1" 
                            IsSnapToTickEnabled="True"
                            Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1" 
                             Text="{Binding #GreenSlider.Value}" 
                             Width="50"/>
                </Grid>
            </StackPanel>
            
            <!-- Blue -->
            <StackPanel Spacing="5">
                <TextBlock Text="Blue:" FontWeight="Bold"/>
                <Grid ColumnDefinitions="*,60">
                    <Slider Grid.Column="0" 
                            Name="BlueSlider"
                            Minimum="0" Maximum="255" 
                            TickFrequency="1" 
                            IsSnapToTickEnabled="True"
                            Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1" 
                             Text="{Binding #BlueSlider.Value}" 
                             Width="50"/>
                </Grid>
            </StackPanel>
        </StackPanel>
        
        <!-- Color Preview -->
        <Border Grid.Row="1" 
                Name="ColorPreview"
                BorderBrush="Gray" 
                BorderThickness="2" 
                CornerRadius="5"
                Margin="0,20,0,0">
        </Border>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Spacing="10"
                    Margin="0,20,0,0">
            <Button Content="OK" 
                    Width="80" 
                    Click="OK_Click"
                    IsDefault="True"/>
            <Button Content="Cancel" 
                    Width="80" 
                    Click="Cancel_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
    
</Window>
